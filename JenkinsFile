pipeline {
  agent any
  stages {
    stage('myStage'){
      steps {
        sh 'ls -la' 
      }
    }
    stage('Build') {
      steps { 
        sh 'ls' 
      }
    }
    stage('nextStage') {
        steps {
            sh 'python ./test1.py'
        }
    }
    stage('readFiles') {

	steps {
		def rootDir = pwd()
   		println("Current Directory: " + rootDir)

    		// point to exact source file
    		def example = load "${rootDir}/readfiles.groovy"

    		readfiles.getChangedFilesList()
	}
    }
  }
}